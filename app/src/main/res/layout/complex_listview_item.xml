<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivFootballPlayerPhoto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        />

    <TextView
        android:id="@+id/tvFootballPlayerFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ylli"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/ivFootballPlayerPhoto"
        />

    <TextView
        android:id="@+id/tvFootballPlayerLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rexhepi"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@id/ivFootballPlayerPhoto"
        android:layout_below="@id/tvFootballPlayerFirstName"
        />

    <TextView
        android:id="@+id/tvFootballPlayerAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20"
        android:textColor="@color/Black"
        android:textSize="25sp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@id/ivFootballPlayerPhoto"
        android:layout_below="@id/tvFootballPlayerLastName"
        />



</RelativeLayout>